<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bbnor_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/diment_height_40dp"
            android:gravity="center"
            android:text="0401 07:00"
            android:textSize="20sp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/grey_darken_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bbnor_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="90dp"
                    android:minWidth="90dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_bbnor_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="火箭队"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/diment_height_100dp"
                android:layout_height="match_parent"
                android:src="@mipmap/vs" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_bbnor_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:minHeight="90dp"
                    android:minWidth="90dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/tv_bbnor_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="火箭队"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>