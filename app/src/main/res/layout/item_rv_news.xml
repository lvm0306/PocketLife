<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_rv_hei"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/iv_newsrv"
            android:layout_width="@dimen/news_rv_pic_wid"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_newsrv_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/diment_height_50dp"
                android:paddingLeft="6dp"
                android:text="biaoti"
                android:textSize="@dimen/text_size_18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_newsrv_publish"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:singleLine="true"
                    android:text="发行商"
                    android:textSize="14sp" />

                <TextView
                    android:paddingRight="6dp"
                    android:id="@+id/tv_newsrv_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="日期"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>